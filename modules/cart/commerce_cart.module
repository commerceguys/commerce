}

/**
 * Helper function to check if a view is a 'commerce_cart' view.
 *
 * @param \Drupal\views\Entity\View $view
 *   The view.
 * @param string $cart_view_tag
 *   The view tag for commerce cart views to check for.
 *
 * @return bool
 *   True if View has 'commerce_cart' view like tag, has commerce_order as base
 *   table and the order_id as the first argument.
 *   Otherwise return FALSE.
 */
function commerce_cart_is_commerce_cart_view(View $view, $cart_view_tag = 'commerce_cart_form') {
  if ($view->get('base_table') == 'commerce_order' && strpos($view->get('tag'), $cart_view_tag) !== FALSE) {
    $view_argument = reset($view->getExecutable()->getDisplay()->options['arguments']);
    if ($view_argument['field'] == 'order_id') {
      return TRUE;
    }
  }
  return FALSE;
}
