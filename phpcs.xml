<?xml version="1.0"?>
<ruleset name="Commerce coding standards">

 <description>Drupal 8 coding standards</description>

 <exclude-pattern>*/.git/*</exclude-pattern>
 <exclude-pattern>*/config/*</exclude-pattern>
 <exclude-pattern>*/css/*</exclude-pattern>
 <exclude-pattern>*/icons/*</exclude-pattern>
 <exclude-pattern>*/vendor/*</exclude-pattern>

 <rule ref="Drupal"/>

 <!-- Rewrote to warning instead of error -->
 <rule ref="Drupal.Files.LineLength.TooLong">
  <message>We are accepting that the line length is too long</message>
  <type>warning</type>
 </rule>
 <rule ref="Drupal.Commenting.ClassComment.Missing">
  <message>We are leaving ClassComment out on purpose</message>
  <type>warning</type>
  </rule>
 <rule ref="Drupal.Array.Array.LongLineDeclaration">
  <message>We ignore to split long arrays because it is more readable not to</message>
  <type>warning</type>
 </rule>
 <rule ref="Drupal.NamingConventions.ValidVariableName.LowerCamelName">
  <message>We ignore variable name in lower camel for this particular file</message>
  <type>warning</type>
  <exclude-pattern>*/modules/checkout/src/Annotation/CommerceCheckoutPane.php</exclude-pattern>
 </rule>
</ruleset>
